@model IndexModel
@{
    ViewData["Title"] = "Home page";
}<style>
    .button {
        background-color:lightslategray;
        border: none;
        color: white;
        opacity: 0.6;
        transition: 0.3s;
        display: inline-block;
        text-decoration: none;
        cursor: pointer;
    }
        .button:hover {
            opacity: 2
        }
</style>


<div>
    <h1 style="">Scrieti o ecuatie!</h1>

    <div id="canvasContainer" style="width: 100%; height: 500px; top: 0; left: 0;display:flex; justify-content: space-evenly; align-items: center;">
        <canvas id="can1" class="can" width="200" height="200" style="border:2px solid;"></canvas>
        <canvas id="can2" class="can" width="200" height="200" style="border:2px solid;"></canvas>
        <canvas id="can3" class="can" width="200" height="200" style="border:2px solid;"></canvas>
        <canvas id="can4" class="can" width="200" height="200" style="border:2px solid;"></canvas>
        <canvas id="can5" class="can" width="200" height="200" style="border:2px solid;"></canvas>
        <canvas id="can6" class="can" width="200" height="200" style="border:2px solid;"></canvas>
    </div>

    <div style="width: 100%; display:flex; justify-content: space-between; align-items: center;">
        <div style="font-size: 2em; font-weight: bold;">Black<div style="width:50px;height:50px;background:black;" id="black" onclick="color(this)"></div></div>
        <div style="font-size: 2em; font-weight: bold;">Eraser<div style="width:50px;height:50px;background:white;border:2px solid;" id="white" onclick="color(this)"></div></div>
        @* image to base64 *@
        <script>
            (function (w, d) {
                'use strict';
                var svg = new XMLSerializer().serializeToString(d.getElementById('can'));
                var base64 = w.btoa(svg);
                d.getElementById('base').appendChild(d.createTextNode('data:image/svg+xml;base64,' + base64));
            }(window, document));
        </script>
        <input class="btn btn-secondary" type="button" value="GetResult" id="btn" size="30" onclick="sendPostRequestToImageRecognizer()" >
        <input class="btn btn-secondary" type="button" value="Clear" id="clr" size="30" onclick="erase()">
    </div>
    <img id="canvasimg" style="top:10%;left:52%;display:none;">

</div>
